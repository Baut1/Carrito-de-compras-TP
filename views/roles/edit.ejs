<h1>Editar Rol</h1>
<form action="/roles/<%= role.id %>" method="POST">
  <label>Nombre:</label>
  <input type="text" name="name" value="<%= role.name %>" required />
  <h3>Permisos</h3>
    <% permisos.forEach(p => { %>
      <label>
        <input
          type="checkbox"
          name="permisos"
          value="<%= p.id %>"
          <%= permisosAsignados.includes(p.id) ? 'checked' : '' %>
        >
        <%= p.nombre %>
      </label><br>
    <% }) %>
  <button type="submit">Actualizar</button>
</form>